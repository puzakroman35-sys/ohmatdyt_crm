# App
APP_ENV=development
TZ=Europe/Kyiv

# Project/Compose
COMPOSE_PROJECT_NAME=ohmatdyt_crm

# Network/Ports
API_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=8080

# Hosts and CORS
ALLOWED_HOSTS=localhost,127.0.0.1,nginx
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database (PostgreSQL)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=ohm_db
POSTGRES_USER=ohm_user
POSTGRES_PASSWORD=change_me
DATABASE_URL=postgresql+psycopg://ohm_user:change_me@db:5432/ohm_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_WORKER_CONCURRENCY=2

# SMTP / Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=postmaster@example.com
SMTP_PASSWORD=change_me
SMTP_TLS=true
SMTP_SSL=false
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=Ohmatdyt CRM

# JWT/Auth
JWT_SECRET=change_me_super_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Paths for shared volumes (keep consistent across containers)
MEDIA_ROOT=/var/app/media
STATIC_ROOT=/var/app/static

# Frontend
NODE_ENV=development
NEXT_PUBLIC_API_BASE_URL=/api

# Nginx
NGINX_SERVER_NAME=localhost
