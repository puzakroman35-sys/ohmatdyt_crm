APP_ENV=production
TZ=Europe/Kyiv
COMPOSE_PROJECT_NAME=ohmatdyt_crm

API_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80

ALLOWED_HOSTS=your.domain.com,localhost
CORS_ORIGINS=https://your.domain.com

POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=ohm_db
POSTGRES_USER=ohm_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
DATABASE_URL=postgresql+psycopg://ohm_user:REPLACE_WITH_STRONG_PASSWORD@db:5432/ohm_db

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_WORKER_CONCURRENCY=4

SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=postmaster@your.domain.com
SMTP_PASSWORD=REPLACE_WITH_STRONG_PASSWORD
SMTP_TLS=true
SMTP_SSL=false
EMAILS_FROM_EMAIL=noreply@your.domain.com
EMAILS_FROM_NAME=Ohmatdyt CRM

JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

MEDIA_ROOT=/var/app/media
STATIC_ROOT=/var/app/static

NODE_ENV=production
NEXT_PUBLIC_API_BASE_URL=/api
NGINX_SERVER_NAME=your.domain.com
